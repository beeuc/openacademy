<odoo>
  <data>
      <record id="action_openacademy_teachers" model="ir.actions.act_window">
          <field name="name">Open Academy teachers</field>
          <field name="res_model">openacademy.teachers</field>
      </record>

      <record id="openacademy_teacher_form" model="ir.ui.view">
          <field name="name">Open Academy teachers: form</field>
          <field name="model">openacademy.teachers</field>
          <field name="arch" type="xml">
              <form>
                  <sheet>
                      <label for="name"/> <field name="name"/>
                      <label for="biography"/>
                      <field name="biography"/>
                      <field name="course_ids">
                          <tree string="Courses" editable="bottom">
                              <field name="name"/>
                          </tree>
                      </field>
                  </sheet>
              </form>
          </field>
      </record>

      <record id="action_openacademy_courses" model="ir.actions.act_window">
          <field name="name">Open Academy courses</field>
          <field name="res_model">openacademy.courses</field>
      </record>
      <record id="openacademy_course_search" model="ir.ui.view">
          <field name="name">Open Academy courses: search</field>
          <field name="model">openacademy.courses</field>
          <field name="arch" type="xml">
              <search>
                  <field name="name"/>
                  <field name="teacher_id"/>
              </search>
          </field>
      </record>
      <record id="openacademy_course_list" model="ir.ui.view">
          <field name="name">Open Academy courses: list</field>
          <field name="model">openacademy.courses</field>
          <field name="arch" type="xml">
              <tree string="Courses">
                  <field name="name"/>
                  <field name="teacher_id"/>
              </tree>
          </field>
      </record>
      <record id="openacademy_course_form" model="ir.ui.view">
          <field name="name">Open Academy courses: form</field>
          <field name="model">openacademy.courses</field>
          <field name="arch" type="xml">
              <form>
                  <sheet>
                      <label for="name"/>
                      <field name="name"/>
                      <label for="teacher_id"/>
                      <field name="teacher_id"/>
                  </sheet>
                  <div class="oe_chatter">
                      <field name="message_follower_ids" widget="mail_followers"/>
                      <field name="message_ids" widget="mail_thread"/>
                  </div>
              </form>
          </field>
      </record>


      <menuitem sequence="0" id="menu_openacademy" name="Open Academy"/>
      <menuitem id="menu_openacademy_content" parent="menu_openacademy"
          name="Open Academy Content"/>
      <menuitem id="menu_openacademy_content_courses"
          parent="menu_openacademy_content"
          action="action_openacademy_courses"/>
      <menuitem id="menu_openacademy_content_teachers"
          parent="menu_openacademy_content"
          action="action_openacademy_teachers"/>
